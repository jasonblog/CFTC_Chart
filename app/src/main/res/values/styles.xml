<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Button.Red" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Button.Blue" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Button.Green" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
